				{
					<li class="nav-item">
						<a class="nav-link" href="/Admin/Display">Admin Page</a>
					</li>
				}
				@if (User.IsInRole("user"))
				{
					<li class="nav-item">
						<a class="nav-link" href="/Booking/Display">Booking</a>
					</li>
				}

				<li class="nav-item">
					<a class="nav-link" href="/UserAuthentication/Logout">Logout</a>
