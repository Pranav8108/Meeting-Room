@model IDENTITY.Models.RoomModel // Replace with your actual model namespace



<h2>Delete Room</h2>

<div>
    <h4>Are you sure you want to delete this room?</h4>
    <h4>Name: @Model.RoomName</h4>
    <h4>Capacity: @Model.Capacity</h4>
    <h4>Status: @Model.Status</h4>
</div>

<form asp-action="DeleteRoom" method="post">
    <input type="hidden" asp-for="Id" />
    <div class="form-group">
        <input type="submit" value="Delete" class="btn btn-danger" />
        <a asp-action="GetRoom" class="btn btn-primary">Cancel</a>
    </div>
</form>
